#publication {
  width: 100%;
  background: var(--background-color);
  --contrast-threshold: 60%;
  --background-color-contrast: hsl(0, 0%, calc((var(--background-color-l) - var(--contrast-threshold)) * -100));
  --theme-color-contrast: hsl(0, 0%, calc((var(--theme-color-l) - var(--contrast-threshold)) * -100));

  & #titlebar {
    padding: 4px 20px;
    justify-content: space-between;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-family: var(--nav-font);
    border-bottom: 0.5px solid rgb(0, 0, 0, 0.2);
    background: var(--theme-color);
    color: var(--theme-color-contrast);
    backdrop-filter: blur(5px);
    position: sticky;
    top: 0px;

    & span {
      order: 3;

      &::before {
        content: "‚ò∞";
        margin-right: 10px;
        cursor: pointer;
      }
    }

    & nav {
      order: 10;
      display: flex;
      flex-direction: row;
      gap: 5px;

      & a {
        position: relative;
        top: 40px;
        left: calc(-100vw + 60px + 100%);
        opacity: 0.1;
        text-decoration: none;
        color: var(--background-color-contrast);
      }

      & a:hover {
        opacity: 1;
      }
    }


    & #brand {
      order: 5;
      display: flex;
      gap: 5px;
      align-items: center;

      & #emoji,
      & h1 {
        font-size: 1.3em;
      }

      & #icon {
        height: 1.3em;
        aspect-ratio: 1;
      }
    }
  }

  & footer {
    height: 50px;
  }
}

#article {
  margin: auto;
  margin-block: 50px;
  padding-inline: 15px;
  max-width: 500px;
  color: var(--background-color-contrast);

  & header {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 30px;

    & h1 {
      font-family: var(--title-font);
      order: 0;
      font-style: italic;
      font-size: 1.8em;
      line-height: 1.4em;
    }

    & hr {
      order: 3;
      margin-block: 20px;
      border: none;
      align-self: center;

      &::after {
        content: 'üéÅ Gift this article | share | discuss';
        cursor: pointer;
        border-radius: 15px;
        margin: 2px;
        border: 1px solid rgb(0, 0, 0, 0.2);
        padding: 5px 10px;
        background: var(--theme-color);
        color: var(--theme-color-contrast);
        backdrop-filter: blur(5px);
      }
    }

    & [itemprop="abstract"] {
      font-size: 1.3rem;
      opacity: 0.8;
      font-weight: light;
    }

    & img {
      order: 5;
    }

    & span {
      align-self: flex-end;
      font-family: "Sans Serif";
      font-size: 0.8rem;
      order: 10;
    }
  }

  & main {
    font-family: var(--body-font);
  }
}
